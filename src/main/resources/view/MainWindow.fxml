<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="620.0" prefWidth="420.0"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="forger.MainWindow">
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>
    <children>
        <TextField fx:id="userInput"
                   onAction="#handleUserInput"
                   prefHeight="44.0"
                   prefWidth="320.0"
                   AnchorPane.bottomAnchor="12.0"
                   AnchorPane.leftAnchor="12.0" />
        <Button fx:id="sendButton"
                mnemonicParsing="false"
                onAction="#handleUserInput"
                prefHeight="44.0"
                prefWidth="80.0"
                text="Send"
                AnchorPane.bottomAnchor="12.0"
                AnchorPane.rightAnchor="12.0" />
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    prefHeight="540.0"
                    prefWidth="396.0"
                    vvalue="1.0"
                    AnchorPane.bottomAnchor="68.0"
                    AnchorPane.leftAnchor="12.0"
                    AnchorPane.rightAnchor="12.0"
                    AnchorPane.topAnchor="12.0">
            <content>
                <VBox fx:id="dialogContainer"
                      prefWidth="380.0"
                      spacing="8">
                    <padding>
                        <Insets bottom="8.0" left="4.0" right="4.0" top="4.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>

